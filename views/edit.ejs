<%-include("partials/header")%>
		<link href="/main.css" type="stylesheet">
	</head>
	<body>
		<div class="container-fluid" style="padding:0px;">
			<form class="w-100 mx-auto p-3" action="/<%=event._id%>?_method=PUT" method="POST" style="max-width:1000px;" enctype="multipart/form-data">
				<div class="form-row justify-content-around">
						<div class="form-group col-4">
					<label for="event[date]">Date:</label>
					<input type="date" class="form-control" id="event[date]" name="event[date]" aria-describedby="event[date]" value="<%=event.date%>" required>
				  </div>
					 <div class="form-group col-4">
					<label for="event[hour]">Time:</label>
					<input type="time" class="form-control" id="event[hour]" min="0" max="23" name="event[hour]" value="<%=event.hour%>">
				  </div>
				</div>
			  
			  <div class="form-group">
				<label for="event[title]">Title</label>
				<input type="text" class="form-control" id="event[title]" name="event[title]" placeholder="Event Name" value="<%=event.title%>">
			  </div>
			  
				  <div class="form-row align-items-center justify-content-between">
							  <div class="form-group col-3">
						  <label for="event[price]">Price</label>
						<input type="number" class="form-control" id="event[price]" name="event[price]" step="0.01" value="<%=event.price%>">
					  </div>
					  
					  <div class="form-check col-4 mt-3 ">
					  <input class="form-check-input" type="radio" name="event[tax]" id="eventtax1" value="tax inc." checked>
					  <label class="form-check-label" for="eventtax1">
						tax included
					  </label>
					</div>
					<div class="form-check col-4 mt-3">
					  <input class="form-check-input" type="radio" name="event[tax]" id="eventtax2" value="+ tax.">
					  <label class="form-check-label" for="eventtax2">
						tax excluded
					  </label>
					
				  </div>
					
				</div>
			  <div class="form-group">
				<label for="event[description]">Description</label>
				<textarea class="form-control" id="event[description]" name="event[description]" rows="3">  <%=event.description%></textarea>
			  </div>
				<div class="row align-items-center image-toggle collapse show">
					
			  
			  <div class="form-group w-100 row justify-content-center image-toggle">
				<label for="image" class="col text-right">Upload New Image:</label>
				<input type="file" class=" col form-control-file " id="image" name="image"  value="<%=event.image%>" required>
			  </div>
			  <button type="submit" class="btn btn-primary btn-block">Submit</button>
			</form>
		</div>
		<script
  src="https://code.jquery.com/jquery-3.4.1.js"
  integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
  crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
