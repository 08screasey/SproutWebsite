				<div id="carousel-spacer"></div>
				
				<!-- ABOUT PAGE -->
				
				<h2 class="text-center margin-header">
					About
				</h2>
				<div class="p-3 mx-auto" style="max-width:800px">	 
					<div class="row " >
						<div class="col-8">
							<h5>
								Who We Are
							</h5>
							<p>
								Opened in 2017, Sprout Plant-based Eatery began with the intention of offering an inclusive, cruelty-free space grab an indulgent bite on your lunch break.
							</p> 
						</div>
						<div class= "col-4 align-self-center">
							<i class="fas fa-users d-block text-center mx-auto"></i>
						</div>
					</div>
					<div class="row">
						<div class="col-8">
							<h5>
								Who We're For
							</h5>
							<p>
								To Put it simply, we're for everyone! Whether you're celiac, vegan or vegetarian, or maybe just have a craving for falafel, you can find what you're looking for on our all-day menu.
							</p> 
						</div>
						<div class="col-4 mx-auto align-self-center">
							<i class="fas fa-seedling text-center d-block mx-auto"></i>
						</div>
					</div>
						<div class="row">
							<div class="col-8">
								<h5>
									What We Do
								</h5>
								<p>
								We're constantly planning new ways to host events with new and delicious vegan treats, like our monthly Beer & Wings night where we treat you to crispy fried cauli-wings and a selection of craft beer. We're also available for hire for catering events in the Kootenay area.
								</p> 
							</div>
							<div class="col-4 mx-auto align-self-center ">
								<i class="fas fa-glass-cheers d-block mx-auto text-center s"></i>
							</div> 
						</div>
				 	</div>
				
					<!-- MENU PAGE	 -->
				
					<hr class="style-two" id="menu">
				 	<div class="selection">
						<h2 class="text-center p-2 margin-header" id="scroll-to">
						Menu
						</h2>
						<ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
		    				<li class="nav-item">
								<a class="nav-link active" id="breakfast-tab" data-toggle="tab" href="#breakfast" role="tab" aria-controls="breakfast" aria-selected="true">
									Breakfast
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="lunch-tab" data-toggle="tab" href="#lunch" role="tab" aria-controls="lunch" aria-selected="false">					Lunch 				
								</a>
							</li>
						</ul>
						<div class="tab-content mx-auto" id="myTabContent" style="width:100%; max-width:800px; padding-bottom:50px;">
							<div class="tab-pane fade show active" id="breakfast" role="tabpanel" aria-labelledby="breakfast-tab">
								<img src="Icons/Sprout Menu Icon.jpg" width="100%">
							</div>
							<div class="tab-pane fade mx-auto" id="lunch" role="lunch" aria-labelledby="lunch-tab">
								<img src="Icons/Sprout Menu Icon 2.jpg" width="100%" class="m-auto">
							</div>
						</div>
					</div>
					<hr class="style-two">
				
					<!-- EVENTS PAGE -->
				
				 	<div class="selection">
						<h2 class="text-center margin-header" id="events">
							Events
						</h2>
						
						
					<%var sortedEvents = events.sort((a,b)=>{return Date.parse(b.date) - Date.parse(a.date)})%>
				 	<%sortedEvents.forEach((event)=>{%>
					 
					<div class="row small justify-content-around w-100 pb-2 time">
						<span class="text-left col-3 date" style="">
							<%=event.date.toLocaleDateString()%>
						</span>
						<span class="text-right col-3">
							<%=event.hour%>
						<span>
					</div>	
				 	<div class="row rounded mx-auto event border-sprout">
						<div class="event-image col-md-12 col-lg-4 py-3">
							<img src="<%=event.image%>" class="rounded "style="width:100%;" >
						</div>
						<div class="col-md-12 col-lg-8 p-3">
							<div class="top-line row align-items-center">
								<div class="col-7">
									<h5 class="bold">
								 	<%=event.title%>
							 		</h5>
								</div>
							<div class="col-5">
								<span class=" text-right tax d-block">
									<strong class="big">
								 		<%if(event.price == 0){%>
								 		FREE 
									</strong>
										 <%}else{%>
								 		$<%=event.price%>
									</strong> 
								<%=event.tax%>
								<%}%>
								</span>								 
							</div>
						</div>
						<div class="pt-3">
							<p>
								<%=event.description%>  
							</p>
						</div>
					</div>
					 	<%if(user && user.username.match("admin")){%>
						<div class="d-flex w-100 justify-content-around">
							<a class="btn btn-xs btn-warning"href="/<%=event._id%>/edit">
								Edit
							</a>
							<a class="btn btn-xs btn-danger"href="/<%=event._id%>/delete">
								Delete
							</a>
						</div>
					 		<%}%>
					  	<div class="d-flex w-100 justify-content-center">
							<a class="btn btn-sm btn-colour event-button" href="/about/bookings">
								Book
							</a>
						</div>
				 	</div>
							<%})%>
						  <%if(user && user.username.match("admin")){%>
						<div class="d-flex justify-content-center p-5">
							<a class="btn btn-lg btn-colour" href="/about/new">
								Create Event
							</a>
						</div>
						<%}%>
				 	</div>
			 		<div style="height:70px;"></div>
						
					<!-- CONTACT PAGE	 -->
						
					<hr class="style-two margin-header my-3" id="contact">
						<div style="height:20px;"></div>
					 	<div class="selection">
							<h2 class="text-center margin-header" id="contact-head">
							 	Contact Us
							</h2>
							<div class="contact row rounded border mt-2">
								<div class="col-md-12 col-lg-6 pt-5">
									<p class="bold text-center w-100">
										Find Us At:
									</p>
									<ul>
										<li>Email: SproutEateryNelson @gmail.com</li>
										<li>Mobile: +1 (205) 688 932</li>
										<li>Address: 569 Ward St, Nelson, BC V1L 1T1</li>
								 	</ul>
								 	<div class="d-flex justify-content-around">
										<a href="https://www.facebook.com/SproutEateryNelson">
							 				<i class="fab fa-facebook"></i>
							 			</a>
								  		<a href="https://www.instagram.com/sprouteaterynelson/">
											<i class="fab fa-instagram"></i>
										</a>
								 	</div>
								</div>
								<div class="col-md-12 col-lg-6 pt-5">
									<p class="bold text-center w-100">
										Opening Times
									</p>
									<ul class="text-center w-100 wrapword" style="word-wrap:break-word">
										<li>Monday 11-4</li>
										<li>Tuesday 11-4</li>
										<li>Wednesday 11-4</li>
										<li>Thursday 11-4</li>
										<li>Friday 11-4</li>
										<li>Saturday 12-4</li>
										<li>Sunday Closed</li>
								 	</ul>
								</div>
						 	</div>
					 	</div>
					</div>
				
					<!-- FOOTER DIV		 -->
				
					<footer class="bg-light"style="margin-top:80px; height:50px; width:100%;">
						<div class="d-flex w-100 justify-content-center">
						<%if(user && user.username.match("admin")){%>
							<a href="/logout" class="admin">Admin Logout</a>
							<%}else{%>
							<a href="/login" class="admin">Admin Login</a>
							<%}%>
						</div>
					</footer>
				</div>
			</div>
				<script>
				 var eventDiv = document.getElementsByClassName("event");
					var eventDate = document.getElementsByClassName("date");
					var eventImage = document.getElementsByClassName("event-image");
					var eventButton = document.getElementsByClassName("event-button");
					var eventTime = document.getElementsByClassName("time");
					
					for(let i=0; i<eventDiv.length; i++){
						const dateDiff = Date.parse(eventDate[i].textContent)-Date.now();
							if(dateDiff<0){
								eventDiv[i].classList.add("fadedbg")
								eventTime[i].classList.add("faded")
								eventButton[i].classList.add("not-active")
								eventImage[i].style.opacity = "30%"
							}
						
// 96KPhNmrhvaCJ4BB
					}
				 </script>
<%-include("partials/footer")%>		