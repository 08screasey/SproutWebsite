<%-include("partials/header")%>
		<link rel="stylesheet" type="text/css" href="/main.css">
	</head>
	<body>
		<div class="container-fluid" style="padding:0px;">
			<form class="w-100 mx-auto p-3" action="/about" method="POST" style="max-width:1000px" enctype="multipart/form-data">
				<div class="form-row justify-content-around">
						<div class="form-group col-4">
					<label for="event[date]">Date:</label>
					<input type="date" class="form-control" id="event[date]" name="event[date]" aria-describedby="event[date]">
				  </div>
					 <div class="form-group col-4">
					<label for="event[hour]">Time:</label>
					<input type="time" class="form-control" id="event[hour]" min="0" max="23" name="event[hour]">
				  </div>
				</div>
			  
			  <div class="form-group">
				<label for="event[title]">Title</label>
				<input type="text" class="form-control" id="event[title]" name="event[title]" placeholder="Event Name">
			  </div>
			  
				  <div class="form-row align-items-center justify-content-between">
							  <div class="form-group col-3">
						  <label for="event[price]">Price</label>
						<input type="number" class="form-control" id="event[price]" name="event[price]" step="0.01">
					  </div>
					  
					  <div class="form-check col-4 mt-3 ">
					  <input class="form-check-input" type="radio" name="event[tax]" id="eventtax1" value="tax inc." checked>
					  <label class="form-check-label" for="eventtax1">
						tax included
					  </label>
					</div>
					<div class="form-check col-4 mt-3">
					  <input class="form-check-input" type="radio" name="event[tax]" id="eventtax2" value="+ tax.">
					  <label class="form-check-label" for="eventtax2">
						tax excluded
					  </label>
					
				  </div>
					
				</div>
			  <div class="form-group">
				<label for="event[description]">Description</label>
				<textarea class="form-control" id="event[description]" name="event[description]" rows="3"></textarea>
			  </div>
			  
			  <div class="form-group">
				<label for="image">Image</label>
				<input type="file" class="form-control-file" id="image" name="image" accept="image/*">
			  </div>
			  <button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</body>
</html>
